{
  "name": "webapp",
  "type": "module",
  "scripts": {
    "dev": "tsx src/server.ts",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000 --d1=edge-control-db --local",
    "dev:pm2": "pm2 start ecosystem.config.cjs",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:create": "wrangler d1 create edge-control-db",
    "db:init": "wrangler d1 execute edge-control-db --local --file=./init-db.sql",
    "db:seed": "wrangler d1 execute edge-control-db --local --file=./seed.sql",
    "db:setup": "./setup-db.sh",
    "db:query": "wrangler d1 execute edge-control-db --local",
    "ingest-kb": "tsx src/scripts/ingestKnowledgeBase.ts",
    "ingest-kb:clear": "tsx src/scripts/ingestKnowledgeBase.ts --clear",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000/api/health",
    "logs": "pm2 logs edge-control-bot --nostream",
    "stop": "pm2 delete edge-control-bot 2>/dev/null || true",
    "restart": "npm run stop && npm run clean-port && npm run dev:pm2",
    "metrics": "curl http://localhost:3000/metrics"
  },
  "dependencies": {
    "@ai-sdk/openai": "^3.0.12",
    "@hono/node-server": "^1.19.9",
    "@langchain/core": "^1.1.15",
    "@langchain/openai": "^1.2.2",
    "@langchain/pinecone": "^1.0.1",
    "@mastra/core": "^0.24.9",
    "@mastra/memory": "^0.15.13",
    "@pinecone-database/pinecone": "^6.1.3",
    "ai": "^4.3.19",
    "bullmq": "^5.66.5",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3",
    "franc": "^6.2.0",
    "hono": "^4.11.4",
    "inngest": "^3.49.3",
    "ioredis": "^5.9.2",
    "langchain": "^1.2.10",
    "languagedetect": "^2.0.0",
    "node-cache": "^5.1.2",
    "pg": "^8.17.1",
    "pino": "^10.2.0",
    "pino-pretty": "^13.1.3",
    "prom-client": "^15.1.3",
    "socket.io-client": "^4.8.3",
    "tsx": "^4.21.0",
    "uuid": "^13.0.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
